{
  "name": "natours",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch": "node-sass scss/main.scss css/style.css -w",
    "compile": "node-sass scss/main.scss css/style.compiled.css",
    "concatenate": "concat -o css/style.concat.css css/icon-fonts.css css/style.compiled.css",
    "prefix": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build": "npm-run-all compile concatenate prefix compress"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.3.1",
    "node-sass": "^6.0.1",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1"
  }
}
